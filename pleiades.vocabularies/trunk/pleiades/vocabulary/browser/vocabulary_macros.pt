<html
  xmlns="http://www.w3.org/1999/xhtml"
  xmlns:tal="http://xml.zope.org/namespaces/tal"
  xmlns:metal="http://xml.zope.org/namespaces/metal"
  xmlns:i18n="http://xml.zope.org/namespaces/i18n"
  i18n:domain="plone"
  >
  <head><title></title></head>
  <body>

    <metal:header_macro define-macro="header">
      <div metal:use-macro="here/document_actions/macros/document_actions">
        Document actions (print, sendto etc)
      </div>
      <h1 tal:content="vocab/title_or_id" />
      <tal:has_document_byline tal:condition="exists:here/document_byline">
        <div metal:use-macro="here/document_byline/macros/byline">
          Get the byline - contains details about author and modification date.
        </div>
      </tal:has_document_byline>
    </metal:header_macro>

    <metal:termlisting_macro
      define-macro="termlisting"
      >
      <tal:chunk
        tal:define="contentFilter python:{'meta_type':['VdexTerm']};
                    contentsMethod python:vocab.getFolderContents;
                    folderContents python:contentsMethod(contentFilter);"
        >
        <dl tal:condition="folderContents">
          <span tal:repeat="brain folderContents">
            <dt tal:define="key brain/getTermKey">
              <a
                tal:content="string:${brain/getTermValue}"
                tal:attributes="name key"
                >
                TERM
              </a>
            </dt>
            <dd tal:content="brain/Description">DEFINITION</dd>
          </span>
        </dl>
      </tal:chunk>
    </metal:termlisting_macro>

    <metal:thesaurilisting_macro
      define-macro="thesaurilisting"
      >
      <tal:chunk
        tal:define="folderContents here/portal_vocabularies/getFolderContents"
        >
        <ul tal:condition="folderContents">
          <li tal:repeat="brain folderContents">
            <a
              tal:content="string:${brain/getId}"
              tal:attributes="href string:${brain/getId}"
              >
              THESAURUS
            </a>
          </li>
        </ul>
      </tal:chunk>
    </metal:thesaurilisting_macro>

  </body>
</html>

