<?xml version="1.0"?>
<object name="PleiadesVocabularyTerm"
  meta_type="Factory-based Type Information with dynamic views"
  i18n:domain="pleiades.vocabularies"
  xmlns:i18n="http://xml.zope.org/namespaces/i18n"
  >
  <property name="title" i18n:translate="">Pleiades Vocabulary Term</property>
  <property name="description"
    i18n:translate=""
    >A simple user-space vocabulary term</property>
  <property name="content_icon">document_icon.png</property>
  <property name="content_meta_type">PleiadesVocabularyTerm</property>
  <property name="product">pleiades.vocabularies</property>
  <property name="factory">addPleiadesVocabularyTerm</property>
  <property name="immediate_view">atct_edit</property> 
  <property name="global_allow">True</property>
  <property name="filter_content_types">True</property>
  <property name="allowed_content_types"></property>
  <property name="allow_discussion">False</property>
  <property name="default_view">view</property>
  <property name="view_methods">
    <element value="view"/>
  </property>
  <alias from="(Default)" to="(dynamic view)"/>
  <alias from="edit" to="atct_edit"/>
  <alias from="sharing" to="@@sharing"/>
  <alias from="view" to="(selected layout)"/>
  <action title="View" action_id="view" category="object" condition_expr=""
    url_expr="string:${folder_url}/base_view" visible="True"
    >
    <permission value="View"/>
  </action>
  <action title="Edit" action_id="edit" category="object" condition_expr=""
    url_expr="string:${object_url}/edit" visible="True"
    >
    <permission value="Modify portal content"/>
  </action>
</object>
